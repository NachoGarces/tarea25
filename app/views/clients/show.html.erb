<p style="color: green"><%= notice %></p>
<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= @client.name %></h5>
    <h6 class="card-subtitle mb-2 text-body-secondary">Edad: <%= @client.age %></h6>
    <p class="card-text">Pelicula arrendada: <%= @client.movies.name %></p>
    <%= link_to "Editar cliente", edit_client_path(@client), class: 'btn btn-warning card-link' %>
    <%= link_to "Todos", clients_path, class: 'btn btn-success card-link' %>
    <%= button_to "Eliminar cliente", @client, method: :delete, class: 'btn btn-danger card-link my-2' %>
  </div>
</div>
